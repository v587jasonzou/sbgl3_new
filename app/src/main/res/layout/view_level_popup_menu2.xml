<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tvAppraiseItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="整修前"
            android:textColor="#2B2B2B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <RadioButton
                android:id="@+id/rb_jwu"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:text="无"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/comment_stu_tv_bg"
                android:background="@drawable/comment_stu_bg"
                />
            <RadioButton
                android:id="@+id/rb_j1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:text="一级"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/comment_stu_tv_bg"
                android:background="@drawable/comment_stu_bg"
                />
            <RadioButton
                android:id="@+id/rb_j2"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:text="二级"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/comment_stu_tv_bg"
                android:background="@drawable/comment_stu_bg"
                />
            <RadioButton
                android:id="@+id/rb_j3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:text="三级"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/comment_stu_tv_bg"
                android:background="@drawable/comment_stu_bg"
                />
            <RadioButton
                android:id="@+id/rb_j4"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:text="四级"
                android:checked="false"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/comment_stu_tv_bg"
                android:background="@drawable/comment_stu_bg"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="整修后"
                android:textColor="#2B2B2B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="22dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <RadioButton
                    android:id="@+id/rb_ywu"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="30dip"
                    android:text="无"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/comment_stu_tv_bg"
                    android:background="@drawable/comment_stu_bg"
                    />
                <RadioButton
                    android:id="@+id/rb_y1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:text="一级"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/comment_stu_tv_bg"
                    android:background="@drawable/comment_stu_bg"
                    />
                <RadioButton
                    android:id="@+id/rb_y2"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:text="二级"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/comment_stu_tv_bg"
                    android:background="@drawable/comment_stu_bg"
                    />
                <RadioButton
                    android:id="@+id/rb_y3"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:text="三级"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/comment_stu_tv_bg"
                    android:background="@drawable/comment_stu_bg"
                    />
                <RadioButton
                    android:id="@+id/rb_y4"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:text="四级"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/comment_stu_tv_bg"
                    android:background="@drawable/comment_stu_bg"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="199sp"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_btn_bg"
            android:text="确认"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textSize="@dimen/text_size_16"
            android:paddingRight="20dp"/>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>