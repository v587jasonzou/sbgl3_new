<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/llReadContent"
            android:visibility="gone">
            <android.support.v7.widget.CardView
                android:id="@+id/cvReadContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="4dp"
                app:contentPaddingBottom="12dp"
                app:contentPaddingLeft="18dp"
                app:contentPaddingRight="6dp"
                app:contentPaddingTop="6dp"
                app:cardCornerRadius="0dp">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivEditStuff"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fix_stuff_icon"
                            />
                    </RelativeLayout>
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="3dp"
                        android:paddingRight="12dp">
                        <TextView
                            android:id="@+id/tvReadStuffName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/colorPrimaryLight"
                            android:text="手电公"/>
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="单价"
                                    android:textColor="@color/title2_text_color"
                                    android:textSize="@dimen/text_size_12"/>
                                <TextView
                                    android:id="@+id/tvReadStuffOnePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="单价"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/text_size_14"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="数量"
                                    android:textColor="@color/title2_text_color"
                                    android:textSize="@dimen/text_size_12"/>
                                <TextView
                                    android:id="@+id/tvReadStuffNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="数量"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/text_size_14"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="金额"
                                    android:textColor="@color/title2_text_color"
                                    android:textSize="@dimen/text_size_12"/>
                                <TextView
                                    android:id="@+id/tvReadStuffTotalPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="金额"
                                    android:textColor="@color/title_text_color"
                                    android:textSize="@dimen/text_size_14"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <TextView
                                android:id="@+id/tvReadStaus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8sp"
                                android:textColor="@color/white"
                                android:background="@drawable/confirm_btn_bg"
                                android:text="正在待料"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"/>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>
            </android.support.v7.widget.CardView>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/llEditContent"
            android:visibility="visible">
            <android.support.v7.widget.CardView
                android:id="@+id/cvEditContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="4dp"
                app:contentPaddingBottom="12dp"
                app:contentPaddingLeft="18dp"
                app:contentPaddingRight="18dp"
                app:contentPaddingTop="12dp"
                app:cardCornerRadius="0dp">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="3dp"
                        android:paddingRight="12dp">
                        <TextView
                            android:id="@+id/tvEditAddTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_18"
                            android:textColor="@color/title_text_color"
                            android:text="添加物料信息"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="23dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="物料名称"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/text_size_12"
                                android:layout_centerVertical="true"/>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="12dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:background="#F6F6F6"
                                android:minWidth="105dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:saveEnabled="false"
                                >
                                <EditText
                                    android:id="@+id/tvEditStuffName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="请选择"
                                    android:background="@null"
                                    android:textColor="@color/title2_text_color"
                                    android:textSize="@dimen/text_size_14"
                                    android:gravity="center"
                                    android:saveEnabled="false"/>
                                <ImageView
                                    android:id="@+id/ivEditStuffName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/arrow_down"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"/>
                            </com.zhy.autolayout.AutoLinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="17dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="单价（元）"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/text_size_12"
                                android:layout_centerVertical="true"/>
                            <EditText
                                android:id="@+id/etEditStuffOnePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="请输入"
                                android:textColor="@color/title2_text_color"
                                android:textSize="@dimen/text_size_14"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="#F6F6F6"
                                android:minWidth="105dp"
                                android:drawablePadding="10dp"
                                android:inputType="numberDecimal"
                                android:layout_alignParentRight="true"
                                android:singleLine="true"
                                android:imeOptions="actionDone"
                                android:saveEnabled="false"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="17dp"
                            android:id="@+id/rlEditNumber">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="数量"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/text_size_12"
                                android:layout_centerVertical="true"/>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:saveEnabled="false">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/jianhao_small_icon"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/ivMinus" />
                                <EditText
                                    android:id="@+id/etEditStuffNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/title2_text_color"
                                    android:textSize="@dimen/text_size_14"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:background="#F6F6F6"
                                    android:minWidth="47dp"
                                    android:drawablePadding="10dp"
                                    android:inputType="numberDecimal"
                                    android:layout_alignParentRight="true"
                                    android:saveEnabled="false"
                                    android:singleLine="true"
                                    android:imeOptions="actionDone"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/jiahao_icon"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/ivAdd" />
                            </com.zhy.autolayout.AutoLinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="17dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="金额（元）"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/text_size_12"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/etEditStuffTotalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/title2_text_color"
                                android:textSize="@dimen/text_size_14"
                                android:gravity="center"
                                android:padding="8dp"
                                android:minWidth="105dp"
                                android:text="12"
                                android:layout_alignParentRight="true"
                                android:saveEnabled="false"/>

                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/line_icon"
                            android:layout_marginTop="5dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">
                            <TextView
                                android:id="@+id/tvEditCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="取消"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_size_16"
                                android:layout_marginLeft="12dp"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/tvEditConfirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/confirm_btn_bg"
                                android:text="确认"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingLeft="20dp"
                                android:textSize="@dimen/text_size_16"
                                android:paddingRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"/>
                        </RelativeLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>
            </android.support.v7.widget.CardView>
        </com.zhy.autolayout.AutoLinearLayout>
    </FrameLayout>
</com.zhy.autolayout.AutoLinearLayout>