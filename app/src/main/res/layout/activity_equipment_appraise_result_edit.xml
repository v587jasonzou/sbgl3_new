<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_tp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:theme="@style/AppTheme.ActionBar"
        app:navigationIcon="@mipmap/left_arrows_white"
        app:title="设备鉴定"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/gray_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#66000000"
            android:elevation="5dp"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.jess.arms.widget.autolayout.AutoScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="15dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/tvEquipName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textSize="@dimen/text_size_18"
                                    android:textColor="#2B2B2B"/>
                                <TextView
                                    android:id="@+id/tvPlanStatus"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:text="已完成"
                                    android:textColor="#ffff"
                                    android:background="@drawable/shape_appraise"
                                    android:textSize="@dimen/text_size_12"
                                    android:gravity="center"
                                    android:layout_gravity="right"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/tvEquipCode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_14"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvOrgName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#595959"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="设置地点"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvUsePlace"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="机械维修人"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvJxRepairPerson"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="电器维修人"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvDqRepairPerson"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="计划年度"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvPlanYear"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="计划鉴定日期"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <TextView
                                    android:id="@+id/tvPlanAppraiDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"/>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="填报人"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="#595959"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textColor="@color/red"
                                        android:paddingLeft="5dp"/>
                                </com.zhy.autolayout.AutoLinearLayout>
                                <EditText
                                    android:id="@+id/tvTianbaoUser"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:background="@null"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingRight="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/arrow_right_icon" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="甲项/乙项/综合"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="#595959"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/red"
                                        android:text="*"
                                        android:paddingLeft="5dp"/>
                                </com.zhy.autolayout.AutoLinearLayout>
                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/tvLevelA"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:textColor="#547BFE"
                                        android:text=""
                                        android:textSize="@dimen/text_size_14"/>
                                    <TextView
                                        android:id="@+id/tvLevelB"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:textColor="#547BFE"
                                        android:text=""
                                        android:textSize="@dimen/text_size_14"/>
                                    <TextView
                                        android:id="@+id/tvLevelC"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:textColor="#547BFE"
                                        android:text=""
                                        android:textSize="@dimen/text_size_14"
                                        android:paddingRight="10dp"/>
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:src="@mipmap/arrow_right_icon" />
                                </com.zhy.autolayout.AutoLinearLayout>
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="鉴定人"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="#595959"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*"
                                        android:textColor="@color/red"
                                        android:paddingLeft="5dp"/>
                                </com.zhy.autolayout.AutoLinearLayout>
                                <EditText
                                    android:id="@+id/tvJianDinPerson"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:hint="请输入当前鉴定人"
                                    android:background="@null"
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingRight="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/arrow_right_icon" />
                            </com.zhy.autolayout.AutoLinearLayout>
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp">
                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="鉴定日期"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="#595959"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/red"
                                        android:text="*"
                                        android:paddingLeft="5dp"/>
                                </com.zhy.autolayout.AutoLinearLayout>
                                <sbgl3.yunda.widget.DateText
                                    android:id="@+id/tvJianDinDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="#2B2B2B"
                                    android:text=""
                                    android:textSize="@dimen/text_size_14"
                                    android:paddingRight="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/arrow_right_icon" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPaddingBottom="12dp"
                        app:contentPaddingLeft="18dp"
                        app:contentPaddingRight="18dp"
                        app:contentPaddingTop="12dp">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="说明"
                                    android:layout_weight="0.2"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="#595959"/>
                                <EditText
                                    android:id="@+id/tvRemark"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textColor="#595959"
                                    android:hint="添加说明"
                                    android:background="@null"
                                    android:textSize="@dimen/text_size_12"
                                    android:paddingRight="10dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/arrow_right_icon" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </android.support.v7.widget.CardView>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.jess.arms.widget.autolayout.AutoScrollView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:contentPaddingBottom="12dp"
                app:contentPaddingLeft="18dp"
                app:contentPaddingRight="18dp"
                app:contentPaddingTop="12dp"
                app:cardBackgroundColor="@color/white">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="鉴定模板"
                            android:textSize="@dimen/text_size_12"
                            android:paddingLeft="5dp"/>
                        <TextView
                            android:id="@+id/tvTemplate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text_size_12"
                            android:textColor="#547BFE"
                            android:paddingLeft="5dp"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/tvConfirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/confirm_btn_bg"
                            android:text="确认"
